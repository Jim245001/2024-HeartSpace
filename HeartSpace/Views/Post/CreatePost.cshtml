@model HeartSpace.Models.DTOs.CreatePostDto

@{
    ViewBag.Title = "發貼文";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .section-title {
            background-color: #fdd9a0;
            text-align: center;
            padding: 10px;
            font-size: 24px;
            font-weight: bold;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .form-section {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 20px;
        }

            .form-section label {
                font-weight: bold;
            }

        .btn-submit {
            background-color: #fdd9a0;
            color: black;
            font-weight: bold;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .btn-submit:hover {
                background-color: #fcb874;
            }

        .text-danger {
            color: red;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- 頁面標題 -->
        <div class="section-title">
            發佈貼文
        </div>

        <!-- 成功訊息 -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- 表單 -->
        @using (Html.BeginForm("CreatePost", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken() <!-- 確保這行位於表單內部 -->

            <!-- 標題區 -->
            <div class="form-section">
                <label for="Title" class="form-label">標題：</label>
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "請輸入貼文標題" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>

            <!-- 圖片上傳區 -->
            <div class="form-section">
                <label for="Image" class="form-label">上傳圖片：</label>
                <input type="file" name="Image" id="Image" class="form-control" />
            </div>


            <!-- 分類選擇 -->
            <div class="form-section">
                <label for="CategoryId" class="form-label">分類：</label>
                @Html.DropDownListFor(
                    m => m.CategoryId,
                    ViewBag.Categories as IEnumerable<SelectListItem>,
                    "請選擇分類",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
            </div>

            <!-- 內文區 -->
            <div class="form-section">
                <label for="Content" class="form-label">內文：</label>
                @Html.TextAreaFor(m => m.PostContent, new { @class = "form-control", rows = 5, placeholder = "請輸入貼文內文" })
                @Html.ValidationMessageFor(m => m.PostContent, "", new { @class = "text-danger" })
            </div>

            <!-- 提交按鈕 -->
            <div class="text-center">
                <button type="submit" class="btn btn-submit">確認送出貼文</button>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
