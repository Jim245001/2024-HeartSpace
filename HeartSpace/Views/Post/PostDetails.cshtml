@model HeartSpace.Models.EFModel.Post

@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <h1 class="post-title">@Model.Title</h1>

    <div class="post-content">
        <p>@Model.PostContent</p>
    </div>

    <div class="post-image">
        @if (Model.Img != null)
        {
            <img src="data:image/png;base64,@(Convert.ToBase64String(Model.Img))" alt="貼文圖片" style="max-width: 100%; height: auto;" />
        }
        else
        {
            <p>沒有上傳圖片。</p>
        }
    </div>

    <div class="post-meta">
        <p>發佈時間：@Model.PublishTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
    </div>
</div>

<!-- 樣式 -->
<style>
    .container {
        width: 80%;
        margin: auto;
        font-family: Arial, sans-serif;
    }

    .post-title {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .post-content {
        font-size: 1.2rem;
        margin-bottom: 20px;
    }

    .post-image {
        margin-bottom: 20px;
    }

    .post-meta {
        font-size: 0.9rem;
        color: #555;
    }
</style>
