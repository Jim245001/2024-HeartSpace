@model HeartSpace.Models.DTOs.CreatePostDto

@{
    ViewBag.Title = "修改貼文";
}

<h2>修改貼文</h2>

@using (Html.BeginForm("EditPost", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Title, "標題：")
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "請輸入標題" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-section">
        <label for="CategoryId" class="form-label">分類：</label>
        @Html.DropDownListFor(m => m.CategoryId,
                                   Model.CategoryList,
                                   "請選擇分類",
                                   new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
    </div>

    <div>
        <label>舊圖片：</label>
        @if (!string.IsNullOrEmpty(Model.OldPostImg))
        {
            <img src="@Model.OldPostImg" alt="Old Image" style="max-width: 300px; max-height: 300px;" />
            <div>
                <input type="checkbox" name="deleteOldImage" value="true" id="deleteOldImage" />
                <label for="deleteOldImage">刪除舊圖片</label>
            </div>
        }
        else
        {
            <p>目前沒有圖片</p>
        }
    </div>

    <div class="form-group">
        <label for="Image">上傳新圖片：</label>
        <input type="file" id="Image" name="Image" class="form-control" />
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PostContent, "內文：")
        @Html.TextAreaFor(model => model.PostContent, new { @class = "form-control", placeholder = "請輸入內文", rows = 5 })
        @Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">修改貼文</button>
}

@if (TempData["ConfirmationMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["ConfirmationMessage"]
    </div>
}
