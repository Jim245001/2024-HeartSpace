@using System.Linq
@model HeartSpace.Models.SearchEventViewModel

@{
    ViewData["Title"] = "搜尋活動";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container-fluid {
        max-width: 100%;
        padding: 0 15px;
    }

    .row {
        margin: 0 auto;
    }

    .card {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.15);
        }
</style>
<div class="container mt-4">
    <h1 class="mb-4">搜尋揪團</h1>

    <!-- 搜尋表單 -->
    <form action="@Url.Action("SearchEvent", "Search")" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" id="searchKeyword" class="form-control" name="keyword" placeholder="請輸入搜尋關鍵字" value="@ViewBag.Keyword" required>
            <button type="submit" class="btn btn-primary">搜尋</button>
        </div>
    </form>


    <!-- 搜尋結果 -->
    @if (ViewBag.Keyword != null)
    {
        if (Model.Events != null && Model.Events.Any())
        {
            <div class="alert alert-success text-center">
                搜尋結果：找到符合「<strong>@ViewBag.Keyword</strong>」推薦揪團！
            </div>

            <div class="row">
                @foreach (var post in Model.Events)
                {
                    <div class="col-md-6 mb-4">
                        @Html.Partial("_EventCard", post)
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                找不到符合「<strong>@ViewBag.Keyword</strong>」的貼文！
            </div>
        }
    }


    <!-- 隨機推薦貼文 -->
    <h3 class="mt-5">推薦揪團</h3>
    @if (Model.RecommendedEvents != null && Model.RecommendedEvents.Any())
    {
        <div class="row">
            @foreach (var card in Model.RecommendedEvents)
            {
                <div class="col-md-4 mb-3">
                    @Html.Partial("_EventCard", card)
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted">目前沒有推薦推薦揪團。</p>
    }
</div>