@{
    ViewData["Title"] = "搜尋貼文";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- 搜尋區域 -->
    <div class="row mb-4">
        <div class="align-items-center">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="請輸入搜尋關鍵字">
                <button class="btn btn-primary">搜尋</button>
            </div>
        </div>
    </div>



    <!-- 貼文資訊卡 -->
    @model IEnumerable<HeartSpace.Models.PostCard>

    @{
        ViewData["Title"] = "搜尋貼文";
    }

    <div class="container mt-4">
        <h1 class="mb-4">搜尋貼文</h1>

        <!-- 搜尋表單 -->
        <form action="@Url.Action("SearchPosts", "Post")" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" class="form-control" name="keyword" placeholder="請輸入搜尋關鍵字" value="@ViewBag.Keyword" />
                <button type="submit" class="btn btn-primary">搜尋</button>
            </div>
        </form>

        <!-- 搜尋結果 -->
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var postCard in Model)
                {
                    <div class="col-md-4 mb-4">
                        @Html.Partial("_PostCard", postCard)
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">目前沒有符合的貼文。</p>
        }
    </div>

</div>
