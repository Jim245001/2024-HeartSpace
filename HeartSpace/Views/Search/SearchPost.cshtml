@model HeartSpace.Models.SearchPostViewModel

@{
    ViewData["Title"] = "搜尋貼文";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">搜尋貼文</h1>

    <!-- 搜尋表單 -->
    <form action="@Url.Action("SearchPost", "Search")" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" id="searchKeyword" class="form-control" name="keyword" placeholder="請輸入搜尋關鍵字" value="@ViewBag.Keyword" required>
            <button type="submit" class="btn btn-primary">搜尋</button>
        </div>
    </form>

    <!-- 搜尋結果 -->
    @if (Model.Posts != null && Model.Posts.Any())
    {
        <div class="alert alert-success text-center">
            搜尋結果：找到符合「<strong>@ViewBag.Keyword</strong>」的貼文！
        </div>

        <div class="row">
            @foreach (var post in Model.Posts)
            {
                <div class="col-md-6 mb-4">
                    @Html.Partial("_PostCard", post)
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            找不到符合「<strong>@ViewBag.Keyword</strong>」的貼文！
        </div>
    }

    <!-- 隨機推薦貼文 -->
    <h3 class="mt-5">隨機推薦貼文</h3>
    @if (Model.RecommendedPosts != null && Model.RecommendedPosts.Any())
    {
        <div class="row">
            @foreach (var card in Model.RecommendedPosts)
            {
                <div class="col-md-4 mb-3">
                    @Html.Partial("_PostCard", card)
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted">目前沒有推薦貼文。</p>
    }
</div>
