<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HeartSpace</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* 導覽列 */
        .navbar-container {
            width: 1200px; /* 固定寬度 */
            margin: 0 auto; /* 置中對齊 */
            margin-top: 10px;
        }

        .navbar {
            background-color: #ffffff;
            border: 2px solid black;
            padding: 10px 15px !important;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar .brand {
            background-color: #d6d3cb;
            padding: 10px 20px;
            text-align: center;
            font-weight: bold;
            font-size: 18px;
            border-radius: 5px;
            text-decoration: none;
            color: black;
        }

        .nav-item {
            background-color: #fdd9a0;
            padding: 8px 16px;
            text-align: center;
            font-size: 14px;
            border-radius: 5px;
            text-decoration: none;
            color: black;
            transition: background-color 0.3s;
            display: block;
        }

        .nav-item-admin {
            background-color: #ff0000;
            padding: 8px 16px;
            text-align: center;
            font-size: 14px;
            border-radius: 5px;
            text-decoration: none;
            color: black;
            transition: background-color 0.3s;
            display: block;
        }

        .nav-item:hover {
            background-color: #fcb874;
        }

        /* 主內容區域寬度 */
        .container {
            max-width: 1200px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <!-- 導覽列 -->
    <div class="navbar-container">
        <div class="navbar d-flex flex-column flex-md-row align-items-center ps-3 pe-3">
            <!-- 品牌名稱 -->
            <a class="brand mb-2 mb-md-0" href="@Url.Action("Index", "Home")">心聚點<br>HeartSpace</a>

            <!-- 導覽按鈕 -->
            <div class="d-flex flex-wrap gap-2">
                <a class="nav-item-admin" href="#">後台</a>
                <a class="nav-item" href="@Url.Action("CreateEvent","Event")">來揪團</a>
                <a class="nav-item" href="#">來發文</a>
                <a class="nav-item" href="#">搜尋揪團</a>
                <a class="nav-item" href="#">搜尋貼文</a>
                <a class="nav-item" href="@Url.Action("Login","Account")">登入/註冊</a>
                <a class="nav-item" href="@Url.Action("Profile","Profile")">會員</a>
            </div>
        </div>
    </div>

    <!-- 主內容區域 -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- 底部腳註（可選） -->
    <footer class="text-center mt-4">
        <p>© 2024 HeartSpace. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 可選腳本區塊 -->
    @RenderSection("Scripts", required: false)
</body>
</html>
