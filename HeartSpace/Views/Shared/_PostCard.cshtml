@model HeartSpace.Models.PostCard
<div class="card p-3 mb-3" style="border: 1px solid #ddd; border-radius: 10px; background-color: #f9f9f9; font-family: Arial, sans-serif;">
    <div class="d-flex align-items-start">
        <!-- 貼文圖片 -->
        <div style="width: 150px; height: 150px; margin-right: 15px;">
            @if (!string.IsNullOrEmpty(Model.PostImg))
            {
                <img src="@Model.PostImg" alt="貼文圖片" style="width: 100%; height: 100%; object-fit: cover; border-radius: 5px;" />
            }
            else
            {
                <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; background-color: #f0f0f0; border-radius: 5px;">
                    無圖片
                </div>
            }
        </div>

        <!-- 貼文資訊 -->
        <div>
            <!-- 貼文標題 -->
            <h5 class="mb-2" style="font-weight: bold; font-size: 1.2rem;">@Model.Title</h5>

            <!-- 發布時間 -->
            <p class="mb-1 text-muted" style="font-size: 0.9rem;">發布時間：@Model.PublishTime.ToString("yyyy/MM/dd HH:mm")</p>

            <!-- 分類 -->
            <p class="mb-1 text-muted" style="font-size: 0.9rem;">分類：@Model.CategoryName</p>

            <!-- 發文者 -->
            <div class="d-flex align-items-center mb-2">
                @if (!string.IsNullOrEmpty(Model.MemberImg))
                {
                    <img src="@Model.MemberImg" alt="會員圖片" style="width: 30px; height: 30px; border-radius: 50%; object-fit: cover; margin-right: 10px;" />
                }
                else
                {
                    <div style="width: 30px; height: 30px; display: flex; justify-content: center; align-items: center; background-color: #ddd; border-radius: 50%; margin-right: 10px;">
                        無
                    </div>
                }
                <span style="font-size: 0.9rem; color: #555;">@Model.MemberNickName</span>
            </div>

            <!-- 貼文內容 -->
            <p style="font-size: 0.95rem; color: #333;">
                @Model.PostContent
            </p>
        </div>
    </div>
</div>

