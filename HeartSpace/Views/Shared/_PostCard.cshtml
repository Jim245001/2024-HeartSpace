@model HeartSpace.Models.PostCard

<div class="card p-3" style="width: 250px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9; font-family: Arial, sans-serif; position: relative;">
    <!-- 貼文圖片 -->
    <div style="height: 100px; display: flex; justify-content: center; align-items: center; background-color: #e9ecef; border: 1px solid #ddd; border-radius: 5px;">
        <img src="@Model.ImageUrl" alt="貼文圖片" style="max-width: 100%; max-height: 100%; object-fit: cover; border-radius: 5px;" />
    </div>

    <!-- 貼文標題 -->
    <h5 class="mt-3 mb-2" style="font-weight: bold; font-size: 1rem; color: #333;">@Model.Title</h5>

    <!-- 發文者 -->
    <div class="d-flex align-items-center mb-2">
        @if (!string.IsNullOrEmpty(Model.MemberImageUrl))
        {
            <img src="@Model.MemberImageUrl" alt="發文者頭像" style="width: 30px; height: 30px; border-radius: 50%; object-fit: cover; margin-right: 10px;" />
        }
        else
        {
            <i class="fa-regular fa-circle-user" style="font-size: 30px; color: #ccc; margin-right: 10px;"></i>
        }
        <span style="font-size: 0.9rem; color: #555;">@Model.MemberName</span>
    </div>

    <!-- 貼文內容 (截斷) -->
    <p style="font-size: 0.85rem; color: #666; margin-bottom: 10px;">
        @(Model.PostContent.Length > 80 ? Model.PostContent.Substring(0, 80) + "..." : Model.PostContent)
    </p>

    <!-- 貼文發佈時間 -->
    <small style="color: #999;">發布於：@Model.PublishTime.ToString("yyyy/MM/dd HH:mm")</small>
</div>

