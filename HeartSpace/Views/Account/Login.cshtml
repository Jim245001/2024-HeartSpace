@model HeartSpace.Models.LoginViewModel

@{
    ViewBag.Title = "登入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card p-4 shadow" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <div class="text-center mb-3">
            <div style="background-color: #d7ceb2; padding: 20px; border-radius: 10px;">
                <h1 class="mb-0">心聚點</h1>
                <h2 class="fs-5">HeartSpace</h2>
            </div>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="Account" class="form-label">帳號</label>
                @Html.TextBoxFor(m => m.Account, new { @class = "form-control", placeholder = "請輸入帳號" })
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">密碼</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "請輸入密碼" })
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">登入</button>
            </div>
        }
        <div class="text-center mt-3">
            <a href="@Url.Action("Register","Account")" class="text-decoration-none">我要註冊</a> |
            <a href="/Account/ForgotPassword" class="text-decoration-none">忘記密碼</a>
        </div>
    </div>
</div>
