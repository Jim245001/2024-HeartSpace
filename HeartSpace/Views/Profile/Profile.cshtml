@using HeartSpace.Models
@using HeartSpace.Helpers
@model HeartSpace.Models.ProfileViewModel
@using HeartSpace.Models.ViewModels

@{
    ViewData["Title"] = Session["UserName"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>會員中心</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .profile-section {
            text-align: center;
            margin: 20px 0;
        }

            .profile-section img {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                border: 2px solid #fdd9a0;
            }

            .profile-section .username {
                font-size: 20px;
                font-weight: bold;
                margin-top: 10px;
            }

            .profile-section .manage-btn {
                margin-top: 10px;
                background-color: #fdd9a0;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                font-size: 14px;
                cursor: pointer;
                color: black;
                text-decoration: none;
            }

                .profile-section .manage-btn:hover {
                    background-color: #fcb874;
                }

        .grid-section {
            margin-top: 30px;
        }

        .grid-title {
            text-align: center;
            margin-bottom: 10px;
            font-size: 16px;
            font-weight: bold;
        }

        .grid-placeholder {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100px;
            background-color: #f0f0f0;
            border-radius: 10px;
            color: #aaa;
            font-size: 14px;
            margin: 5px;
        }

        .grid-row {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- 個人資料區 -->
        <div class="profile-section">
            <img src="https://via.placeholder.com/120" alt="Profile Picture">
            @if ((string)Session["UserRole"] == "admin")
            {
                <div class="username mb-4">管理員<br /> @Session["UserName"] </div>
            }
            else
            {
                <div class="username mb-4">會員<br /> @Session["UserName"] </div>
            }
            <a class="manage-btn" href="@Url.Action("EditProfile", "Profile")">個人資料管理</a>
        </div>

        <!-- 圖片區域 -->
        <div class="grid-section">
            <div class="row">
                <!-- 已報名的活動 -->
                <div class="col-md-6">
                    <div class="grid-title">已報名的活動</div>
                    <div id="eventsContainer">
                        @Html.Partial("_EventsPartial", Model.Events ?? new List<EventViewModel>())
                    </div>
                </div>

                <!-- 已發布的文章 -->
                <div class="col-md-6">
                    <div class="grid-title">已發布的文章</div>
                    <div class="grid-placeholder flex-grow-1 mx-2">
                        尚無已發布文章
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- 發起的活動 -->
                <div class="col-md-6">
                    <div class="grid-title">發起的活動</div>
                    <div class="grid-placeholder flex-grow-1 mx-2">
                        尚無發起活動
                    </div>
                </div>

                <!-- 已參加過的活動 -->
                <div class="col-md-6">
                    <div class="grid-title">已參加過的活動</div>
                    <div class="grid-placeholder flex-grow-1 mx-2">
                        尚無參加過的活動
                    </div>
                </div>
            </div>
        </div>

        <!-- 放鴿子的記錄 -->
        <div class="container" style="margin-top: 40px; margin-bottom: 40px;">
            <h3 style="color: #fd7e14; font-weight: bold; border-bottom: 2px solid #28a745; padding-bottom: 5px;">
                放人鴿子的記錄😡： @Model.AbsentEventCount 次
            </h3>
            <p style="color: red; text-align: center; margin-top: 10px;">
                警告：放 3 次鴿子將會被停權！請在活動報名前取消報名。
            </p>
        </div>
    </div>
</body>
</html>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
