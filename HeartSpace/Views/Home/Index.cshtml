@using HeartSpace.Models
@using Dapper
@model HomePageViewModel

@{
    ViewData["Title"] = "首頁";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a.text-decoration-none {
        display: block;
        margin: 0;
        padding: 0;
    }
</style>

<div class="container-fluid px-0">
    <div class="row mx-0">
        <!-- 貼文版 -->
        <div class="col-md-6 px-1">
            <div class="card">
                <div class="card-header text-center">貼文版</div>
                <div class="card-body">
                    <!-- 按鈕組 -->
                    <div class="btn-group mb-3 w-100">
                        <button class="btn btn-secondary btn-sm w-50">最新</button>
                        <div class="dropdown w-50">
                            <button class="btn btn-secondary btn-sm w-100 dropdown-toggle" type="button" id="postCategoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                @(Model.SelectedCategoryId.HasValue
                                    ? Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId)?.CategoryName ?? "分類"
                                    : "分類")
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="postCategoryDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", new { categoryId = (int?)null, postPage = 1, eventPage = Model.Events.PageIndex })">全部</a>
                                </li>
                                @foreach (var category in Model.Categories)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", new { categoryId = category.Id, postPage = 1, eventPage = Model.Events.PageIndex })">
                                            @category.CategoryName
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- 貼文內容 -->
                    <div class="row gx-1 gy-2">
                        @foreach (var post in Model.Posts)
                        {
                            <div class="col-6">
                                <a href="@Url.Action("PostDetails", "Post", new { id = post.Id })" class="text-decoration-none">
                                    <div class="card border-0 shadow-sm d-flex align-items-center justify-content-center" style="height: 300px;">
                                        @Html.Raw(new PostCard(
                                                 post.Title,
                                                 post.MemberName,
                                                 post.PostContent,
                                                 post.PublishTime,
                                                 post.PostImg,
                                                 post.MemberImg
                                             ).RenderHtml())
                                    </div>
                                </a>
                            </div>
                        }
                    </div>

                    <!-- 分頁導航 -->
                    <nav>
                        <ul class="pagination justify-content-center mt-3">
                            @if (Model.Posts.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { postPage = Model.Posts.PageIndex - 1, eventPage = Model.Events.PageIndex, categoryId = Model.SelectedCategoryId })">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.Posts.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Posts.PageIndex ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { postPage = i, eventPage = Model.Events.PageIndex, categoryId = Model.SelectedCategoryId })">@i</a>
                                </li>
                            }

                            @if (Model.Posts.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { postPage = Model.Posts.PageIndex + 1, eventPage = Model.Events.PageIndex, categoryId = Model.SelectedCategoryId })">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <!-- 揪團版 -->
        <div class="col-md-6 px-1">
            <div class="card">
                <div class="card-header text-center">揪團版</div>
                <div class="card-body">
                    <div class="btn-group mb-3 w-100">
                        <button class="btn btn-secondary btn-sm w-50">最新</button>
                        <div class="dropdown w-50">
                            <button class="btn btn-secondary btn-sm w-100 dropdown-toggle" type="button" id="eventCategoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                @(Model.SelectedCategoryId.HasValue
                                    ? Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId)?.CategoryName ?? "分類"
                                    : "分類")
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="eventCategoryDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", new { categoryId = (int?)null, postPage = Model.Posts.PageIndex, eventPage = 1 })">全部</a>
                                </li>
                                @foreach (var category in Model.Categories)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", new { categoryId = category.Id, postPage = Model.Posts.PageIndex, eventPage = 1 })">
                                            @category.CategoryName
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="row gx-1 gy-2">
                        @foreach (var events in Model.Events)
                        {
                            <div class="col-6">
                                <a href="@Url.Action("EventDetail", "Event", new { id = events.Id })" class="text-decoration-none">
                                    <div class="card border-0 shadow-sm d-flex align-items-center justify-content-center" style="height: 300px;">
                                        @Html.Raw(new EventCard(
                                                 events.EventName,
                                                 events.MemberName,
                                                 events.Location,
                                                 events.Description,
                                                 events.EventTime,
                                                 events.MemberProfileImgUrl,
                                                 events.ImgUrl
                                             ).RenderHtml())
                                    </div>
                                </a>
                            </div>
                        }
                    </div>

                    <nav>
                        <ul class="pagination justify-content-center mt-3">
                            @if (Model.Events.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { postPage = Model.Posts.PageIndex, eventPage = Model.Events.PageIndex - 1, categoryId = Model.SelectedCategoryId })">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.Events.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Events.PageIndex ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { postPage = Model.Posts.PageIndex, eventPage = i, categoryId = Model.SelectedCategoryId })">@i</a>
                                </li>
                            }

                            @if (Model.Events.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { postPage = Model.Posts.PageIndex, eventPage = Model.Events.PageIndex + 1, categoryId = Model.SelectedCategoryId })">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>