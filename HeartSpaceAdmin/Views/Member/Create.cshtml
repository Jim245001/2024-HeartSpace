@model HeartSpaceAdmin.Models.MemberViewModel

<h1>新增會員</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Account">帳號</label>
        <input asp-for="Account" class="form-control" />
        @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="Name">姓名</label>
        <input asp-for="Name" class="form-control" />
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="NickName">暱稱</label>
        <input asp-for="NickName" class="form-control" />
        @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="Email">電子郵件</label>
        <input asp-for="Email" class="form-control" />
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="PasswordHash">密碼 (雜湊)</label>
        <input asp-for="PasswordHash" class="form-control" />
        @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="Role">角色</label>
        <input asp-for="Role" class="form-control" />
        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="MemberImg">會員圖片 (URL)</label>
        <input asp-for="MemberImg" class="form-control" />
        @Html.ValidationMessageFor(model => model.MemberImg, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="AbsenceCount">缺席次數</label>
        <input asp-for="AbsenceCount" class="form-control" type="number" />
        @Html.ValidationMessageFor(model => model.AbsenceCount, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">新增</button>
</form>
